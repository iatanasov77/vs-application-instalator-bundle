<div>
    {{ form_start(form, { 'action': path('vs_application_application_handle', {'applicationId': applicationId}), 'attr': {'id': 'formApplicationEdit', 'class': 'form-horizontal '} }) }}
        <div class="formFields">
        	<label class="custom-control custom-checkbox">  
                <input type="checkbox" id="page_form_enabled" name="application_form[enabled]" 
                    class="custom-control-input form-check-input"
                    {% if form.vars.value.enabled %}checked="checked"{% endif %}
                />
                <span class="custom-control-label">{{ 'vs_application.form.enabled' | trans( {},'VSApplicationBundle' ) }}</span>
            </label>
    
            <div class="form-group">
                {{ form_label(form.title, null, {
                    'label_attr': {'class': 'col-sm-8 control-label'}
                    }) 
                }}
        
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.hostname, null, {
                    'label_attr': {'class': 'col-sm-8 control-label'}
                    }) 
                }}
        
                {{ form_widget(form.hostname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    {{ form_end(form, {'render_rest': false}) }}
</div>