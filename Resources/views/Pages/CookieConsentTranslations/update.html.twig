{% extends "@VSApplication/layout.html.twig" %}

{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% if( item.id ) %}
	{% set pageTitle = 'vs_application.template.cookie_consent_translations_update_title' | trans( {},'VSApplicationBundle' ) %}
{% else %}
	{% set pageTitle = 'vs_application.template.cookie_consent_translations_create_title' | trans( {},'VSApplicationBundle' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle }}{% endblock %}

{% block pageTitle %}
    <h2 class="pageheader-title"><i class="icon_genius"></i> {{ pageTitle }}</h2>
    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
{% endblock %}

{% block content %}
	<div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
            	<h5 class="card-header">{{ 'vs_application.template.cookie_consent_translations_details' | trans( {},'VSApplicationBundle' ) }}</h5>
            	<div class="card-body">
            	
                    {% if formErrors is defined %}
                        {{ vs_form.errors( formErrors ) }}     
                    {% endif %}
		            
                    {% if(item.id) %}{% set method = "PUT" %}{% else %}{% set method = "POST" %}{% endif %}
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal '}, 'method': method }) }}
                        {{ form_widget(form.availableLocales) }}
                        {{ form_widget(form.localeCode) }}
                    
                		<div class="form-group">
                        	{{ form_label(form.languageCode, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.languageCode, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        <div class="form-group">
                        	{{ form_label(form.btnAcceptAll, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.btnAcceptAll, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        <div class="form-group">
                        	{{ form_label(form.btnRejectAll, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.btnRejectAll, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.btnAcceptNecessary, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.btnAcceptNecessary, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.btnShowPreferences, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.btnShowPreferences, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.label, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.label, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.title, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control' }}) }}
                        </div>
                        
                        {{ vs_form.buttons( form, metadata ) }}
                    {{ form_end(form) }}
        		</div>
			</div>
		</div>
    </div>  
{% endblock content %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/cookie-consent-translations-edit' ) }}
{% endblock %}
